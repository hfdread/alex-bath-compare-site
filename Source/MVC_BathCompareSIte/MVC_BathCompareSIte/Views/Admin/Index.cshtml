@model MVC_BathCompareSIte.Forms.AdminLoginForm
@{
    Layout = "~/Views/Shared/CPanels/_LoginLayout.cshtml";
}

@using (Html.BeginForm("LogIn", "Admin", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    <h2 class="form-signin-heading">Site Administrator</h2>
    <hr />
    <div class="text-danger">@ViewBag.Error</div>
    <div>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</div>
    <div>@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</div>
    @Html.LabelFor(model => model.Username, new { @class = "sr-only" })
    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username", @autofocus = "autofocus" })
    @Html.LabelFor(model => model.Password, new { @class = "sr-only" })
    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", placeholder = "Password" })

    <input type="submit" value="Sign in" class="btn btn-lg btn-primary btn-block" />
}