@model MVC_BathCompareSIte.DTO.UserDTO
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Control Panel</title>
    @Styles.Render("~/CPanel/login")
    @Styles.Render("~/Content/kendo/css")
    
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/placeholder")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <!-- Header -->
    <div id="top-nav" class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="glyphicon-cloud"></span>
                </button>
                <a class="navbar-brand" href="#">Control Panel</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
                            <i class="glyphicon glyphicon-user"></i>Hello! @Model.FirstName <span class="caret"></span>
                        </a>
                        <ul id="g-account-menu" class="dropdown-menu" role="menu">
                            <li><a href="#">My Profile</a></li>
                            <li><a href="#"><i class="glyphicon glyphicon-lock"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div><!-- /container -->
    </div>
    <!-- /Header -->
    <!-- Main -->
    <div class="container">
        <!-- upper section -->
        <div class="row">
            <div class="col-sm-3">
                <!-- left -->
                <h3><i class="glyphicon glyphicon-briefcase"></i> Toolbox</h3>
                <hr>

                <ul class="nav nav-stacked">
                    <li><a href="#"><i class="glyphicon glyphicon-flash"></i> Alerts</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-th"></i> Item Management</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-list-alt"></i> Reports</a></li>
                </ul>
                <hr>
                <div class="btn-group btn-group-justified">
                    <a href="#" class="btn btn-info col-sm-3">
                        <i class="glyphicon glyphicon-plus"></i><br>
                        Service
                    </a>
                    <a href="#" class="btn btn-info col-sm-3">
                        <i class="glyphicon glyphicon-cloud"></i><br>
                        Cloud
                    </a>
                    <a href="#" class="btn btn-info col-sm-3">
                        <i class="glyphicon glyphicon-cog"></i><br>
                        Tools
                    </a>
                    <a href="#" class="btn btn-info col-sm-3">
                        <i class="glyphicon glyphicon-question-sign"></i><br>
                        Help
                    </a>
                </div>
            </div><!-- /span-3 -->
            <div class="col-sm-9">

                <!-- column 2 -->
                <h3><i class="glyphicon glyphicon-dashboard"></i> Dashboard</h3>
                <hr>
                <div class="row">
                    <!-- center left-->
                    <div class="col-md-7">
                        @RenderBody()
                    </div><!--/col-->
                </div><!--/row-->
            </div><!--/col-span-9-->

        </div><!--/row-->
        <!-- /upper section -->
    <hr/>
        <div class="text-center">
            <footer>
                <p>&copy; @DateTime.Now.Year - Badkamers</p>
            </footer>
        </div>
    </div><!--/container-->
    <!-- /Main -->
</body>
</html>